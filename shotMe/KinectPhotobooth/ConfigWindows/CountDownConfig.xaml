<Window x:Class="KinectPhotobooth.CountDownConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinectPhotobooth"
        mc:Ignorable="d"
        Title="Count Down Timer Config" Height="162.904" Width="301.966">
    <Grid>
        <TextBox TextWrapping="Wrap" x:Name="txtCountdownSeconds" VerticalAlignment="Top" Margin="0,50,138,0" HorizontalAlignment="Right" Width="83" Height="23"/>
        <Button Content="Add" Name="btnSave" Click="btnAdd_Click" Margin="0,92,104,0" HorizontalAlignment="Right" Width="57" Height="23" VerticalAlignment="Top"/>
        <Button Content="Cancel" Name="btnClose" Click="btnCancel_Click" Margin="201,92,0,0"  HorizontalAlignment="Left" Width="64" Height="23" VerticalAlignment="Top" RenderTransformOrigin="0.52,0.603"/>

        <Label Content="Please add seconds to countdown timer:" Margin="37,10,29,0" Height="24" VerticalAlignment="Top"/>
        <Label Content="seconds" HorizontalAlignment="Left" Margin="161,47,0,0" VerticalAlignment="Top" Width="56"/>
    </Grid>
</Window>
